<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/profileEditBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_edge_button"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.050"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        tools:layout_editor_absoluteX="60dp"
        tools:srcCompat="@drawable/baseline_arrow_back_24" />
    <TextView
        android:id="@+id/profileEditListTitle"
        android:layout_width="415dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/groovy"
        android:gravity="center"
        android:padding="16dp"
        android:text="Edit Profile"
        android:textColor="#C8102E"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailAdd"
        android:layout_width="281dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter Email here"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEditListTitle" />

    <ImageButton
        android:id="@+id/emailAddButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_edge_button"
        android:contentDescription="Add Button"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/emailAdd"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/baseline_add_24" />

    <EditText
        android:id="@+id/phoneAdd"
        android:layout_width="281dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter Phone here"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAdd" />

    <ImageButton
        android:id="@+id/phoneAddButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_edge_button"
        android:contentDescription="Add Button"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/phoneAdd"
        app:layout_constraintTop_toBottomOf="@+id/emailAddButton"
        tools:srcCompat="@drawable/baseline_add_24" />

    <EditText
        android:id="@+id/DOBAdd"
        android:layout_width="281dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter birthday here (YYYY-MM-DD)"
        android:inputType="date"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneAdd" />

    <ImageButton
        android:id="@+id/DOBAddButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_edge_button"
        android:contentDescription="Add Button"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/DOBAdd"
        app:layout_constraintTop_toBottomOf="@+id/phoneAddButton"
        tools:srcCompat="@drawable/baseline_add_24" />


</androidx.constraintlayout.widget.ConstraintLayout>